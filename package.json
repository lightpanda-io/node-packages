{
  "name": "@lightpanda/node-packages",
  "version": "1.0.0",
  "description": "Lightpanda's Packages for NPM",
  "main": "index.js",
  "author": "Nicolas Rigaudiere <nicolas@tonalogic.io>",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightpanda-io/node-packages.git"
  },
  "bugs": {
    "url": "https://github.com/lightpanda-io/node-packages/issues"
  },
  "homepage": "https://github.com/lightpanda-io/node-packages#readme",
  "scripts": {
    "build": "turbo run build",
    "dev": "TURBO_TELEMETRY_DISABLED=1 npx turbo@latest run dev --parallel --force",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "publish-packages": "turbo run build lint && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.5"
  },
  "engines": {
    "node": "22.16",
    "yarn": "4.9"
  },
  "packageManager": "yarn@4.9.2"
}
